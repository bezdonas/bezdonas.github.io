						<style>
							
							.carousel {
								position: relative;
							}

							.carousel .next,
							.carousel .prev {
								position: absolute;
								top: -30px;
								left: 50%;
								width: 60px;
								height: 60px;
								z-index: 500;
								cursor: pointer;
							}

							.carousel .next {
								margin-left: 150px;
								background: url('pic/portfolio/vorobiev/next.png');
							}

							.carousel .prev {
								margin-left: 50px;
								background: url('pic/portfolio/vorobiev/prev.png');
							}

							.carousel .next:active,
							.carousel .prev:active {
								background-color: black;
							}

							.carousel .carousel-cont {
								width: 940px;
								height: 529px;
								margin: 0 auto;
								overflow: hidden;
								box-shadow: 0 0 30px rgba(0,0,0,.2);
							}

							.carousel .carousel-cont img {
								float: left;
								box-shadow: none;
							}

							.carousel .frame {
								width: 99999px;
								-webkit-transition: margin-left .5s;
								transition: margin-left .5s;
							}

							.carousel .frame.blink {
								-webkit-animation: blink .5s 0s 1;
								animation: blink .5s 0s 1;
							}

							@-webkit-keyframes blink {
								1% {
									opacity: 1;
								}

								50% {
									opacity: .5;
								}

								100% {
									opacity: 1;
								}
							}

							@keyframes blink {
								1% {
									opacity: 1;
								}

								50% {
									opacity: .5;
								}

								100% {
									opacity: 1;
								}
							}

						</style>

						<script>
							(function($) {

								var car = $('.carousel'),
									frame = $('.frame', car)
									n = $('.next', car),
									p = $('.prev', car)
									pic = $('img', car),
									act = pic.filter('.active');

								n
									.off('click.car')
									.on('click.car', function() {
										act = act.next().length ? act.next() : pic.first();
										changePic();
									});

								p
									.off('click.car')
									.on('click.car', function() {
										act = act.prev().length ? act.prev() : pic.last();
										changePic();
									});


								function changePic() {
									var l = act.index() * 940;
									pic.removeClass('active');
									act.addClass('active');
									frame.css('margin-left', -(l));
									frame.addClass('blink');
									setTimeout(function() {
										frame.removeClass('blink');
									}, 500);
								};


							})(jQuery);
						</script>

