.header
	wrapper(wrapperWidth)
	position relative
	text-align center

	// Mods
	&.__dotted:after
		content ''

		position absolute
		bottom 0
		left (wrapperWidth/2) - 56px

		width 111px
		height 3px

		background url(yellowDot) repeat-x 0 0

	& ._logo
		ib()
		margin 30px 0
		transition background .2s
		border-radius 20px

		&:hover
			background: rgba(250,250,250,0.2)

		&:active
			background: rgba(250,250,250,0.4)

		// Mods
		&.__house
			margin 20px 0

			font 700 36px/1.2 fAgora
			color linkColor
			text-decoration none

			& ._num,
			& ._meters
				display block

			& ._num:after
				content ''

				display block

				width 111px
				height 3px

				background url(yellowDot) repeat-x 0 0

			& ._meters
				font-size 18px
				line-height 1.5

			& sup
				font-size 11px