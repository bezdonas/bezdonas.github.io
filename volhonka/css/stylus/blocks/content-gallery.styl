.content-gallery
	text-align center
	position relative

	& img
		cursor pointer
	
	& ul
		position absolute
		bottom 0
		right -45px

		list-style-type none

	& a
		ib()
		text-decoration none
		margin-top 5px
		padding-top 5px
		width 28px
		height 23px
		border-radius 50%
		transition background baseTrans

		&.__active,
		&:hover
			background linkColor
			color black

.inline-photos
	line-height 15px
	justify-ib_wrp(15px)
	margin-bottom -15px

	& img
		ib()
		justify-ib_ch(15px)
		margin-bottom 15px
