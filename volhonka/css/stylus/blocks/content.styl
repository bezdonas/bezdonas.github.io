.content
	padding-bottom footerHeight

	& ._wrp
		wrapper(wrapperWidth)
		clearfix()

	// Mods
	&.__wo-header ._wrp
		margin-top 70px

.content-header
	margin 30px 0 40px

	& h1 
		margin 0

	// Mods
	&.__house

		margin 0

		& h1
			font 700 122px/1.1 fAgora
			color white

		& ._num,
		& ._meters
			display block

		& ._num:after
			content ''

			display block
			margin 0 auto

			width 170px
			height 4px

			background url(whiteDot) repeat-x 0 0

		& ._meters
			font-size 48px
			line-height 1.5

		& sup
			font-size 25px

	&.__cozy
		margin 20px 030px

.sidebar
	width 250px

	&.__left
		float left

	&.__right
		float right

.content-center
	width 500px
	margin 0 250px 50px

	& p:first-child
		margin-top 0

.content-spreader
	margin-left -250px
	width 1000px