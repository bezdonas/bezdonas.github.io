.side-menu
	list-style-type none
	padding 0
	margin 0 40px 0 30px

	& li
		margin-bottom 25px

	& a 
		ib()
		text-decoration none
		font bold italic 13px/1.5 fAgora

	& ._inner
		list-style-type none
		padding 10px 0 0 25px

		.lt-ie8 &
			padding-left 0
			list-style-type disc

		& li
			margin 0

			.lt-ie8 &
				vertical-align middle

		& a
			ib()
			padding 0 0 5px 10px
			position relative

		& a:before
			content ''
			width 4px
			height 3px
			background url(blackDot) no-repeat 0 0

			position absolute
			top 8px
			left -2px

		& a:hover:before

			width 21px
			height 9px

			background url(leftMonogram) no-repeat 0 0
			top 5px
			left: -20px