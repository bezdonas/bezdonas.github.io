body
	font 700 14px/1.5 fAgora
	color fontColor

h1
	font 600 48px/1.5 fAgora
	color headerColor
	text-align center

h2
	font 800 20px/1.3 fAgora
	color headerColor

p
	margin 20px 0

// font sizes
.__huge
	font-size 20px

// font styles
.__italic, em, i
	font-style italic

// font weights
.__bold, b, strong
	font-weight 800
.__medium
	font-weight 700
.__light
	font-weight 600

// line heights
.__compact
	line-height 1.1
.__cozy
	line-height 1.3
.__comfortanle
	line-height 1.5

a
	color black
	transition color baseTrans

	&:hover,
	&.__active,
	.__active > &
		color linkColor

a.__dotted
	text-decoration none
	border-bottom 1px dotted fontColor
	transition color baseTrans, border-color baseTrans

a.__dotted:hover
	border-color linkColor

a.__noline 
	text-decoration none

a.__link-color
	color linkColor
	&:hover
		text-decoration underline