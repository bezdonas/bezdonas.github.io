.__ico
	ib()
	background-repeat no-repeat
	background-position 0 0

	// Pics
	&.__gas
		width 36px
		height 36px
		background-image url(icoGas)

		.lt-ie8 &
			width 36px !important

	&.__water
		width 28px
		height 42px
		background-image url(icoWater)

		.lt-ie8 &
			width 28px !important

	&.__sewerage
		width 45px
		height 41px
		background-image url(icoSewerage)

		.lt-ie8 &
			width 45px !important

	&.__electricity
		width 46px
		height 46px
		background-image url(icoElectricity)

		.lt-ie8 &
			width 46px !important

	&.__internet
		width 43px
		height 49px
		background-image url(icoInternet)

		.lt-ie8 &
			width 43px !important

	&.__prev,
	&.__next
		width 40px
		height 40px
		border-radius 100%

		opacity .6
		transition all xxTrans

		.lt-ie8 &
			width 40px !important

		&:hover,
		a:hover &
			opacity: 1

	&.__prev
		background #fff url(galleryPrev) no-repeat 12px center
	&.__next
		background #fff url(galleryNext) no-repeat 15px center


	&.__car
		background-image url(car)
	&.__bus
		background-image url(bus)

	&.__twt, &.__vk, &.__fb
		width 41px
		height 41px
		background-color white
		background-position center center
		background-repeat no-repeat
		border-radius 50%
		transition background-color baseTrans

		.lt-ie8 &
			width 41px !important

		&:hover
			background-color linkColor

	&.__twt
		background-image url(twt)
	&.__vk
		background-image url(vk)
	&.__fb
		background-image url(fb)

	// Mods
	&.__bg
		width auto
		height auto