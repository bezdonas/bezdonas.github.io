.home-start
	margin-bottom 75px
	
	& ._pic-link,
	& nav,
	& nav li
		ib()
		vertical-align middle

		.lt-ie9 &
			margin-right -1px

	& ._pic-link
		width 115px

		& img
			border 4px solid linkColor
			transition border-color .2s

		&:hover img
			border-color linkGreen

		&.__right
			text-align right

		.lt-ie9 &
			margin-right -7px

	& ._menu
		width 770px

		& ul
			margin 0
			padding 0
			list-style-type none

		& li
			position relative
			text-align center
			padding 0
			margin-right 10px

			.lt-ie8 &
				margin-right 5px

		& li:last-child
			margin-right 0

		& a
			width 190px
			height 345px
			padding 0 30px 10px

			background linkGreen
			background rgba(21, 57, 39, .9)
			transition background .2s
			display table-cell
			vertical-align middle

			font 700 italic 16px/1.5 fAgora
			text-decoration none
			color white

			.lt-ie8 &
				ib()
				padding-top 140px
				height 205px

		& a:hover
			background rgba(21, 57, 39, 1)

		& span
			position absolute
			top 20%
			left 0
			right 0

			opacity .6
			font-size 12px