.plan-gallery
	clearfix()
	min-height 570px

	background-repeat no-repeat
	background-position center center
	
	& ul
		list-style-type none

	& a, 
	& header
		font 700 italic 13px/1.5 fAgora

	& .tabs
		float left
		& .__active a,
		& .__active a:hover
			color planTabsActive

	& ._floor
		float right

		& header
			padding 9px 0

		& ul
			padding-left 15px
			display none

			&.__active
				display block

		& a
			display block
			padding 5px 0
		
		& em
			ib()
			text-align center
			padding-top 5px
			width 28px
			height 23px
			margin-right 5px
			border-radius 50%

		& li.__active a
			cursor default
			pointer-events none
			color white

		& li.__active em
			background linkColor