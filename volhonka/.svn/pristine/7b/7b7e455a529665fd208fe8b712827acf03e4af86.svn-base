// Helper classes
.__wrapper
	width wrapperWidth
	margin 0 auto

.__clearfix
	clearfix()

.__ib
	display inline-block
	*display inline
	zoom 1

.__hidden
	display none !important

// Expanded
.js-expanded
	&.__hidden
		display block !important
		height 0 !important
		overflow hidden

		.lt-ie8 &
			display none !important
			height auto !important

// /Expanded

// _Tabs

.js-tab-container
	opacity 1
	transition opacity xxTrans

	&.__hidden
		display block !important
		height 0 !important
		overflow hidden
		opacity 0

		.lt-ie8 &
			display none !important

// /_Tabs

// Helper mixins

justify-ib_wrp(n)
	text-align justify
	&:before
		content ''
		display block
		width 100%
		margin-bottom -(n)

	&:after
		ib()
		content ''
		width 100%

justify-ib_ch(n)
	ib()
	position relative
	top n

ib()
	display inline-block
	*display inline
	zoom 1

wrapper(n)
	width n
	margin 0 auto